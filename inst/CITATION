citHeader("To cite rPraat in publications use:")

citEntry(entry = "InProceedings",
  author       = personList(as.person("Tomas Boril"), as.person("Radek Skarnitzl")),
  booktitle      = "-",
  year         = "2016",
  title        =
  paste("We have invested a lot of time and effort in creating rPraat package, please cite it when using it for data analysis.",
  "At this time, we have submitted a paper which is not published yet.",
  "Please, let us know (e-mail: <borilt@gmail.com>) if you use this toolbox and we will provide you the citation link",
  "as soon as possible. Thank you."),

  textVersion  =
  paste("We have invested a lot of time and effort in creating rPraat package, please cite it when using it for data analysis.",
  "At this time, we have submitted a paper which is not published yet.",
  "Please, let us know (e-mail: <borilt@gmail.com>) if you use this toolbox and we will provide you the citation link",
  "as soon as possible. Thank you.")
)
